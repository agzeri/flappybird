{
  "name": "flappybird",
  "version": "1.0.0",
  "description": "The famous game now on the web.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "webpack",
    "precommit": "npm t",
    "predocs": "rimraf docs",
    "coverage:report": "nyc report npm t",
    "coverage:all": "nyc --reporter=lcov --reporter=html --reporter=text-summary",
    "coverage": "npm run -s coverage:report && npm run -s coverage:all && npm run -s coverage:check",
    "coverage:check": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "coverage:push": "cat ./coverage/lcov.info | codecov",
    "docs:js": "jsdoc -t template -c jsdoc.json -R README.md -r",
    "docs:sass": "sassdoc _sass/",
    "docs": "npm run -s docs:js && npm run -s docs:sass",
    "lint:js": "eslint tests/**/*.js",
    "lint:sass": "sass-lint --config .scss-lint.yml --verbose --no-exit",
    "pretest": "npm run lint:js && npm run lint:sass",
    "start": "webpack-dev-server --open",
    "test": "npm run -s coverage:all -- mocha tests/** --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agzeri/flappybird.git"
  },
  "keywords": [
    "FlappyBird",
    "ESNEXT",
    "TDD",
    "Webpack",
    "JavaScript"
  ],
  "author": "@agzeri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agzeri/flappybird/issues"
  },
  "homepage": "https://github.com/agzeri/flappybird#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.17",
    "codecov": "^2.3.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.5.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jsdoc": "^3.5.4",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "sass-lint": "^1.10.2",
    "sass-loader": "^6.0.6",
    "sass-true": "^3.0.0",
    "sassdoc": "^2.3.0",
    "sassdoc-theme-neat": "0.0.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.2"
  },
  "nyc": {
    "exclude": [
      "tests/"
    ]
  }
}
